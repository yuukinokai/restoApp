namespace ca.mcgill.ecse223.resto.model;

class Table
{
  unique Integer tableNumber;
  lazy Boolean isUsed;
  double  width;
  double length;
  Integer x;
  Integer y;
}

class Seat
{
  lazy Boolean isUsed;
  1..* -<@> 1 Table;
}

class MenuItem
{
  unique name;
  Double price;
  1 -- * Order;
  }

class Food
{
  enum FoodCategory{
Appetizer, MainCourse, Dessert};
  lazy FoodCategory foodCategory;
  
  isA MenuItem;
}

class Beverage
{
  Boolean isAlcohol;
  isA MenuItem;
}

class Reservation
{
  autounique reservationNumber;
  DateTime dateTime;
  contactName;
  contactEmailAddress;
  contactPhoneNumber;
  Integer numberInParty;
0..* -- 1..* Table;
}

class Order
{
  autounique orderNumber;
}

class IndividualBill
{
  Double totalPrice;
  lazy Boolean isPaid;
  1..* <@>- 1..* Order;
    0..1 -- 1..* Seat;
}


class RestoApp
{
  1 <@>- * Table tables;
  Table currentTables;
  Order currentOrders;
  1 <@>- 1 Menu menu;
  1 <@>- * IndividualBill bills;
  1 <@>- * Order orders;
  1 <@>- * Reservation reservations;
  
}

class Menu
{
  1 <@>- * MenuItem menuItems;
}

